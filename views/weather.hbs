<h1>Welcome to {{city}}</h1>

{{#if error}}

<p style="color:red"> {{ error }} </p>

<div class="container mt-5">
        {{#if currently}}
        <div class="row d-flex justify-content-center">
                <div class="currently text-center">
                        <h2>{{currently.temperature}}<span class="text-danger">째F</span> |
                                {{currently.celcius}} <span class="text-danger">째C</span></h2>
                        <h3 class="text-center">{{currently.summary}}</h3>
                        <h5 class="text-center">{{currently.time}}</h5>
                </div>
        </div>
        <div class="row d-flex justify-content-center my-3">
                <div class="mr-4">
                        Precipitation: {{currently.precipitation}}%
                </div>
                <div class="mr-4">
                        Humidity: {{currently.humidity}}%
                </div>
                <div class="mr-4">
                        Wind: {{currently.windSpeed}}km/h
                </div>
        </div>
        {{/if}}
        {{#if hourly}}
        <div class="row d-flex justify-content-center mt-5">
                {{#each hourly.data}}
                <div class="hourly mx-5 text-center">
                        <div>{{time}}</div>
                        <div>{{day}}</div>
                        <div>{{temperature}}<span class="text-danger">째F</span> | {{celcius}}<span
                                        class="text-danger">째C</span></div>
                </div>
                {{/each}}
        </div>
        {{/if}}